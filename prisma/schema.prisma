generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username     String?   @unique
  name      String
  email    String   @unique
  password String
  avatar_url  String?
  bio       String?
  phone_number  String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  status    USER_STATUS @default(UNVERIFIED)
  role    USER_ROLE   @default(USER)
  sessions  Session[]

  @@map("users")
}

enum USER_STATUS {
  UNVERIFIED
  VERIFIED
  BANNED
}

enum USER_ROLE {
  USER
  MOD
  ADMIN
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  hash    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("sessions")
}
