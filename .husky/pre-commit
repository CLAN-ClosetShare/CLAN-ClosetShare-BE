BRANCH=$(git rev-parse --abbrev-ref HEAD)
REGEX="^(feature|feat|chore|fix|bugfix|hotfix|docs|refactor|test|build|perf|style|ci|release|merge)\/([a-zA-Z0-9-]+(\.[a-zA-Z0-9-]+)*)$"

echo "Branch name: $BRANCH"
if ! echo "$BRANCH" | grep -qE "$REGEX"; then
  echo "Your commit was rejected due to branching name"
  echo "Please rename your branch with '(feature|feat|chore|fix|bugfix|hotfix|docs|refactor|test|build|perf|style|ci|release|merge)(/<ticket>?)/<subject-example>' syntax"
  exit 1
fi

pnpm lint-staged